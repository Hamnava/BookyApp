<Window x:Class="BookyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookyApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Button Content="Send Message" HorizontalAlignment="Center" Margin="0,78,0,0" VerticalAlignment="Top" Width="114" Background="#FF619BDC" Click="SendDataButton_Click" Height="36"/>

        <Button Content="Send and Receive Message back" HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top" Width="270" Background="#FF80CC37" Click="SendAndRecieveDataButton_Click" RenderTransformOrigin="0.5,0.5" Height="43" BorderThickness="1,1,1,3" />

        <Button x:Name="SignalRMessage" Content="SignalR Message" HorizontalAlignment="Center" Margin="0,243,0,0" VerticalAlignment="Top" Width="168" Background="#FFDCBB61" Click="SignalRMessageButton_Click" Height="40"/>

    </Grid>
</Window>
